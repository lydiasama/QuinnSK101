{
  "rules": {
    "building": {
      ".read": true,
      ".write": "auth.uid != null"
    },
    "matrix-log": {
      ".read": "root.child('users').child(auth.uid).child('group').val() === 'admin'",
      ".write": "auth.uid != null",
      ".indexOn": ["uid", "name"]
    },
    "users": {
      ".read": "auth.uid != null",
      ".write": true
    },
    "login-log": {
      ".read": "root.child('users').child(auth.uid).child('group').val() === 'admin'",
      ".write": "auth.uid != null",
      ".indexOn": ["uid", "name"]
    }
  }
}